/* miniprogram/pages/addComment/addComment.wxss */
page {
  height: 100%;
}
.comment {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.comment-upload {
  position: relative;
  margin: 20rpx 20rpx 0;
  flex: 0 0 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #eff1f3;
  color: #bfbfbf;
  border: 1px solid #eee;
}
.comment-upload.img {
  background-color: #fff;
  border: 1px solid #fff;
}
.comment-upload .add-icon {
  margin-top: -40rpx;
  font-size: 200rpx;
  line-height: 1;
}
.comment-upload .add-img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 400rpx;
}
.comment-text {
  flex: 1;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
}
.comment-save {
  margin: 20rpx;
  background-color: #23b8ff;
  color: #fff;
}